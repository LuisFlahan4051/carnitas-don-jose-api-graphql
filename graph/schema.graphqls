# GraphQL schema example
#
# https://gqlgen.com/getting-started/
# go run github.com/99designs/gqlgen generate

scalar Upload

type User {
  id: ID!
  name: String
  lastname: String
  username: String
  password: String
  admin: Boolean
  root: Boolean
  verified: Boolean
  reported: Boolean
  reportReason: String
  activeContract: Boolean
  admissionDay: String
  unemploymentDay: String
  workedHours:Int
  currentBranch: String
  originBranch: String
  
  monetaryBonds: Float
  monetaryDiscounts: Float

  mail: String
  alternativeMails: [String]
  phone: String
  alternativePhones: [String]
  address: String
  bornDay: String
  degreeStudy: String
  relationShip: String
  curp: String
  citizenId: String
  credentialId: String
  originState: String
  
  score: String
  qualities: String
  defects: String

  darktheme: Boolean
  profilePicture: Upload
}



input NewUser {
  id: ID!
  name: String
  lastname: String
  username: String!
  password: String!
  admin: Boolean
  root: Boolean
  verified: Boolean
  reported: Boolean
  reportReason: String
  activeContract: Boolean
  admissionDay: String
  unemploymentDay: String
  workedHours:Int
  currentBranch: String
  originBranch: String
  
  monetaryBonds: Float
  monetaryDiscounts: Float

  mail: String
  alternativeMails: [String]
  phone: String
  alternativePhones: [String]
  address: String
  bornDay: String
  degreeStudy: String
  relationShip: String
  curp: String
  citizenId: String
  credentialId: String
  originState: String
  
  score: String
  qualities: String
  defects: String

  darktheme: Boolean
  profilePicture: Upload 
}
input delateUser{
  id: ID
  username: String
  password: String
}

input changeUser{
  id: ID
  name: String
  lastname: String
  username: String
  password: String
  admin: Boolean
  root: Boolean
  verified: Boolean
  reported: Boolean
  reportReason: String
  activeContract: Boolean
  admissionDay: String
  unemploymentDay: String
  workedHours:Int
  currentBranch: String
  originBranch: String
  
  monetaryBonds: Float
  monetaryDiscounts: Float

  mail: String
  alternativeMails: [String]
  phone: String
  alternativePhones: [String]
  address: String
  bornDay: String
  degreeStudy: String
  relationShip: String
  curp: String
  citizenId: String
  credentialId: String
  originState: String
  
  score: String
  qualities: String
  defects: String

  darktheme: Boolean
  profilePicture: Upload 
}



type Query {
  users: [User]
  userByUsername(username: String): User
  userById(id: ID): User
  validateUser(
    username: String
    password: String
  ): Boolean
}

type Mutation {
  createUser(input: NewUser!): User!
  updateUser(id:ID, changes: changeUser!): User!
  delateUser(input: delateUser!): User!
}

